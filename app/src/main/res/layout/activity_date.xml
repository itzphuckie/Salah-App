<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.fragmentsCalendar.DateActivity">

    <include layout="@layout/tool_bar" />
    <TextView
        android:id="@+id/text_view_title_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/amita_bold"
        android:text="Title"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tool_bar"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="8"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_fajar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="4">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_view_fajar_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Fajar"
                        android:textColor="#000"
                        android:textSize="20dp" />

                    <RadioGroup
                        android:id="@+id/radio_group_fajar"
                        android:gravity="center_horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_fajar_pj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/colorAccent"
                            android:text="PJ"
                            android:textColor="@color/colorAccent" />

                        <RadioButton
                            android:id="@+id/radio_fajar_wj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/colorAccent"
                            android:text="WJ"
                            android:textColor="@color/colorAccent" />

                        <RadioButton
                            android:id="@+id/radio_fajar_kh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/colorAccent"
                            android:text="KH"
                            android:textColor="@color/colorAccent" />
                    </RadioGroup>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_view_fajar_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="4:20 AM"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="20dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_dhuhar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_view_dhuhar_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dhuhar"
                        android:textColor="#000"
                        android:textSize="20dp" />

                    <RadioGroup
                        android:id="@+id/radio_group_dhuhar"
                        android:gravity="center_horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_dhuhar_pj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/colorAccent"
                            android:text="PJ"
                            android:textColor="@color/colorAccent" />

                        <RadioButton
                            android:id="@+id/radio_dhuhar_wj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/colorAccent"
                            android:text="WJ"
                            android:textColor="@color/colorAccent" />

                        <RadioButton
                            android:id="@+id/radio_dhuhar_kh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/colorAccent"
                            android:text="KH"
                            android:textColor="@color/colorAccent" />
                    </RadioGroup>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_view_dhuhar_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="7:20 AM"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="20dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_asr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="4">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_view_asr_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Asr"
                        android:textColor="#000"
                        android:textSize="20dp" />

                    <RadioGroup
                        android:id="@+id/radio_group_asr"
                        android:gravity="center_horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_asr_pj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/colorAccent"
                            android:text="PJ"
                            android:textColor="@color/colorAccent" />

                        <RadioButton
                            android:id="@+id/radio_asr_wj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/colorAccent"
                            android:text="WJ"
                            android:textColor="@color/colorAccent" />

                        <RadioButton
                            android:id="@+id/radio_asr_kh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/colorAccent"
                            android:text="KH"
                            android:textColor="@color/colorAccent" />
                    </RadioGroup>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_view_asr_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="11:20 AM"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="20dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_maghrib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:clickable="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_view_maghrib_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Maghrib"
                        android:textColor="#000"
                        android:textSize="20dp" />

                    <RadioGroup
                        android:id="@+id/radio_group_maghrib"
                        android:gravity="center_horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_maghrib_pj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/colorAccent"
                            android:text="PJ"
                            android:textColor="@color/colorAccent" />

                        <RadioButton
                            android:id="@+id/radio_maghrib_wj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/colorAccent"
                            android:text="WJ"
                            android:textColor="@color/colorAccent" />

                        <RadioButton
                            android:id="@+id/radio_maghrib_kh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/colorAccent"
                            android:text="KH"
                            android:textColor="@color/colorAccent" />
                    </RadioGroup>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_view_maghrib_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="4:20 PM"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="20dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_isha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:clickable="true">

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_view_isha_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Isha"
                        android:textColor="#000"
                        android:textSize="20dp" />

                    <RadioGroup
                        android:id="@+id/radio_group_isha"
                        android:gravity="center_horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_isha_pj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/colorAccent"
                            android:text="PJ"
                            android:textColor="@color/colorAccent" />

                        <RadioButton
                            android:id="@+id/radio_isha_wj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/colorAccent"
                            android:text="WJ"
                            android:textColor="@color/colorAccent" />

                        <RadioButton
                            android:id="@+id/radio_isha_kh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:buttonTint="@color/colorAccent"
                            android:text="KH"
                            android:textColor="@color/colorAccent" />
                    </RadioGroup>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_view_isha_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="11:20 PM"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="20dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </LinearLayout>
    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/button_save_daily_prayer"
            android:textSize="18dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:text="Save"
            android:background="@drawable/layout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Button>
    </RelativeLayout>



</RelativeLayout>